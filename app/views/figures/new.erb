<h1>CREATE A FIGURE</h1>

<form action="/figures" method="post">

  <label>Figure Name:</label>
  <input id="figure_name" type="text" name="figure[name]">

  <br></br>

  <label>Choose existing titles: </label><br>
  <%Title.all.each do |title|%>
  <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>"> <%=title.name%><br>
  </input>
  <% end %><br>

  <label>And/or create a new title: </label>
  <input id="new_title" type="text" name="title[name]"><br>

  <br></br>

  <label>Choose existing landmarks: </label><br>
  <%Landmark.all.each do |landmark|%>
  <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"> <%=landmark.name%><br>
  </input>
  <% end %><br>

  <label>And/or create a new landmark: </label><br>
  <label>Name: </label>
  <input id="new_landmark" type="text" name="landmark[name]"><br>
  <label>Year Completed: </label>
  <input type="text" name="landmark[year_completed]"><br>

  <br></br>

  <input type="submit" value="Create New Figure">

</form>


